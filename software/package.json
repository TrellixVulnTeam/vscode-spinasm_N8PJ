{
	"name": "spinasm",
	"displayName": "spinasm",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:spinasm.createproject",
		"onCommand:spinasm.buildproject",
		"onCommand:spinasm.uploadproject",
		"onCommand:spinasm.testserial"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "spinasm.createproject",
				"title": "SpinASM : Create project structure"
			},
			{
				"command": "spinasm.buildproject",
				"title": "SpinASM : Build"
			},
			{
				"command": "spinasm.uploadproject",
				"title": "SpinASM : Upload"
			},
			{
				"command": "spinasm.testserial",
				"title": "SpinASM : Test serial"
			}
		],
		"languages": [
			{
				"id": "spn",
				"aliases": [
					"SPIN",
					"spn"
				],
				"extensions": [
					".spn"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "spn",
				"scopeName": "source.spn",
				"path": "./syntaxes/spn.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"@types/vscode": "^1.47.0",
		"electron-rebuild": "^2.0.0",
		"eslint": "^7.6.0",
		"glob": "^7.1.6",
		"mocha": "^8.0.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"ini": "^1.3.5",
		"serialport": "^9.0.1"
	}
}
